{
  "window.openFoldersInNewWindow"   : "on"
, "window.closeWhenEmpty"           : false
//, "window.zoomLevel"                : 0
, "window.title"                    : "${dirty}${activeEditorShort} / ${rootName}"

, "glassit.alpha"                   : 255
, "glassit.step"                    : 1

/* Editor settings */
, "editor.lineNumbers"              : "on"
, "editor.tabSize"                  : 2
, "editor.insertSpaces"             : true
, "editor.renderIndentGuides"       : true
, "editor.renderWhitespace"         : "all"
, "editor.fontFamily"               : "'Ricty Diminished', 'Source Han Code JP', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'"
, "editor.fontSize"                 : 14
, "editor.letterSpacing"            : -0.5
, "editor.rulers"                   : [ 80 ]
, "editor.renderControlCharacters"  : true
, "editor.matchBrackets"            : "always"
, "editor.links"                    : true
, "editor.cursorStyle"              : "line"
, "editor.cursorBlinking"           : "smooth"
, "editor.cursorWidth"              : 3
, "editor.minimap.showSlider"       : "always"
, "editor.formatOnSave"             : false

/* Terminal settings */
, "terminal.integrated.cursorBlinking"      : true
, "terminal.integrated.fontFamily"          : "Ricty Diminished"
, "terminal.integrated.fontSize"            : 12
, "terminal.integrated.setLocaleVariables"  : true

/* Disabled telemetry (to Microsoft) */
, "telemetry.enableTelemetry"             : false
, "telemetry.enableCrashReporter"         : false

/* Workbench settings */
// , "workbench.iconTheme"                   : "vscode-icons"
, "workbench.iconTheme"                   : "vs-seti"
, "workbench.editor.showTabs"             : true
, "workbench.statusBar.visible"           : true
, "workbench.colorCustomizations"         :
  {
//     "editor.lineHighlightBackground"      : "#0b2d35"
// //  , "editor.lineHighlightBorder"          : "#20c0a8"
// //  , "editor.wordHighlightBackground"      : "#135564"
//   , "editor.wordHighlightBorder"            : "#a0522d"
//   , "editor.selectionBackground"          : "#0b2d35"
//   , "editor.selectionHighlightBackground" : "#0b2d35"
//   , "editor.selectionHighlightBorder"     : "#20c0a8"
//   , "editor.findMatchBackground"          : "#fa6800"
//   , "editor.findMatchHighlightBackground" : "#a0522d"
  }

/* File settings */
, "files.autoGuessEncoding"         : true
, "files.encoding"                  : "utf8"
, "files.insertFinalNewline"        : true
, "files.trimFinalNewlines"         : true
, "files.trimTrailingWhitespace"    : true
, "files.exclude"                   :
  {
    "**/.git"       : true
  , "**/.svn"       : true
  , "**/.hg"        : true
  , "**/CVS"        : true
  , "**/.DS_Store"  : true
  , "**/bin"        : true
  , "**/*.exe"      : true
  , "**/*.o"        : true
  , "**/*.a"        : true
  , "**/*.so"       : true
  , "**/*.obj"      : true
  , "**/*.ilk"      : true
  , "**/*.pdb"      : true
  , "**/*.tlog"     : true
  , "**/*.idb"      : true
  , "**/*.dll"      : true
  , "**/.vs"        : true
  }
/*
 * Force associations
 *
 * https://code.visualstudio.com/docs/languages/identifiers#_known-language-identifiers
 */
, "files.associations"  :
  {
/* .clang-format */
    ".clang-format"     : "json"

/* Assosiate no-suffix std library header */
  , "iostream"          : "cpp"
  , "cstdlib"           : "cpp"

/* Indivisuals */
  , "makerule.arm"      : "makefile"
  , "makerule.sim"      : "makefile"
  , "makerule.common"   : "makefile"
  }

, "emmet.showSuggestionsAsSnippets"             : true
  
  // https://github.com/DavidAnson/markdownlint/blob/master/doc/Rules.md  
, "markdownlint.config"                         :
  {
    "no-multiple-blanks"                        : { "maximum" : 2 }
  }

/* Markdown */
, "[markdown]"                        :
  {
    "files.trimTrailingWhitespace"              : false
  , "editor.tabSize"                            : 2
  , "files.eol"                                 : "auto"
  , "editor.defaultFormatter"                   : "yzhang.markdown-all-in-one"
  }

/* JSON */
, "[json]"                            :
  {
    "editor.defaultFormatter"         : "vscode.json-language-features"
  }

/* C++ */
, "[cpp]"                             :
  {
    "editor.insertSpaces"             : true
  , "editor.detectIndentation"        : true
  }

/* C++ settings */
, "C_Cpp.intelliSenseEngine"                  : "Default"

/* clang-format settings */
, "C_Cpp.clang_format_path"                   : null
, "C_Cpp.clang_format_style"                  : "file"
, "C_Cpp.clang_format_fallbackStyle"          : "Chromium"
  // {
  //   "BasedOnStyle"                            : "Chromium"
  // , "IndentWidth"                             : 2
  // , "IndentCaseLabels"                        : false
  // , "AlignAfterOpenBracket"                   : "BAS_Align"
  // , "AlignConsecutiveAssignments"             : true
  // , "AlignConsecutiveDeclarations"            : true
  // , "BreakConstructorInitializersBeforeComma" : true
  // }
, "C_Cpp.clang_format_sortIncludes"             : null
, "C_Cpp.updateChannel"                         : "Insiders"

/* HTML */
, "html.format.wrapLineLength"                    : 0

/* Plant UML */
, "plantuml.exportFormat"                         : "png"
, "plantuml.render"                               : "Local"
, "plantuml.server"                               : "http://localhost:8080"
, "plantuml.commandArgs"                          :
  [
    "-Xmx2g"
  , "-DPLANTUML_LIMIT_SIZE=16384"
  ]

/* code-runner settings */
, "code-runner.clearPreviousOutput"   : true
, "code-runner.runInTerminal"         : true


, "terminal.integrated.shell.windows" : "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"

/* Editor */
, "editor.suggestSelection"                       : "first"

/* VS Intelli Code */
, "vsintellicode.modify.editor.suggestSelection"  : "automaticallyOverrodeDefaultValue"

/* Git */
, "git.autofetch"                         : true
, "gitlens.gitCommands.skipConfirmations" :
  [
    "fetch:command"
  , "stash-push:command"
  , "switch:command"
  , "push:command"
  ]

, "team.showWelcomeMessage"                       : false


/* Draw.io */
, "hediet.vscode-drawio.online-url"       : "about:blank;https://embed.diagrams.net/"
, "hediet.vscode-drawio.local-storage"    : ""

/* Code Runner */
// , "code-runner.executorMap"           :
