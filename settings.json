{
  "window.openFoldersInNewWindow"   : "on"
, "window.closeWhenEmpty"           : false
//, "window.zoomLevel"                : 0
, "window.title"                    : "${dirty}${activeEditorShort} / ${rootName}"

, "glassit.alpha"                   : 255
, "glassit.step"                    : 1

/* Editor settings */
, "editor.lineNumbers"              : "on"
, "editor.tabSize"                  : 2
, "editor.insertSpaces"             : true
, "editor.renderIndentGuides"       : true
, "editor.renderWhitespace"         : "all"
, "editor.fontFamily"               : "'Ricty Diminished', 'Source Han Code JP', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'"
, "editor.fontSize"                 : 14
, "editor.letterSpacing"            : -0.5
, "editor.rulers"                   : [ 80 ]
, "editor.renderControlCharacters"  : true
, "editor.matchBrackets"            : true
, "editor.links"                    : true
, "editor.cursorStyle"              : "line"
, "editor.cursorBlinking"           : "smooth"
, "editor.cursorWidth"              : 3
, "editor.minimap.showSlider"       : "always"
, "editor.formatOnSave"             : false

/* Terminal settings */
, "terminal.integrated.cursorBlinking"      : true
, "terminal.integrated.fontFamily"          : "Ricty Diminished"
, "terminal.integrated.fontSize"            : 12
, "terminal.integrated.setLocaleVariables"  : true

/* Disabled telemetry (to Microsoft) */
, "telemetry.enableTelemetry"             : false
, "telemetry.enableCrashReporter"         : false

/* Workbench settings */
, "workbench.iconTheme"                   : "vscode-icons"
, "workbench.editor.showTabs"             : true
, "workbench.statusBar.visible"           : true
, "workbench.colorCustomizations"         :
  {
    "editor.lineHighlightBackground"      : "#135564"
//  , "editor.lineHighlightBorder"          : "#20c0a8"
  , "editor.wordHighlightBackground"      : "#135564"
  , "editor.selectionBackground"          : "#135564"
  , "editor.selectionHighlightBackground" : "#135564"
  , "editor.selectionHighlightBorder"     : "#20c0a8"
  , "editor.findMatchBackground"          : "#fa6800"
  , "editor.findMatchHighlightBackground" : "#a0522d"
  }

/* File settings */
, "files.autoGuessEncoding"         : true
, "files.encoding"                  : "utf8"
, "files.insertFinalNewline"        : true
, "files.trimFinalNewlines"         : true
, "files.trimTrailingWhitespace"    : true
, "[markdown]"                      :
  {
    "files.trimTrailingWhitespace"  : false
  }
, "files.exclude"                         :
  {
    "**/.git"       : true
  , "**/.svn"       : true
  , "**/.hg"        : true
  , "**/CVS"        : true
  , "**/.DS_Store"  : true
  , "**/bin"        : true
  , "**/*.exe"      : true
  , "**/*.o"        : true
  , "**/*.a"        : true
  , "**/*.so"       : true
  , "**/*.obj"      : true
  , "**/*.ilk"      : true
  , "**/*.pdb"      : true
  , "**/*.tlog"     : true
  , "**/*.idb"      : true
  , "**/*.dll"      : true
  , "**/.vs"        : true
  }
/*
 * Force associations
 *
 * https://code.visualstudio.com/docs/languages/identifiers#_known-language-identifiers
 */
, "files.associations"  :
  {
/* .clang-format */
    ".clang-format" : "json"
/* Assosiate no-suffix std library header */
  , "iostream"      : "cpp"
  , "cstdlib"       : "cpp"
/* Indivisuals */
  , "makerule.arm"    : "makefile"
  , "makerule.sim"    : "makefile"
  , "makerule.common" : "makefile"
  }
, "[cpp]"                       :
  {
    "editor.insertSpaces"       : true
  , "editor.detectIndentation"  : true
  }
/* C++ settings */
, "C_Cpp.intelliSenseEngine"          : "Default"

/* clang-format settings */
, "C_Cpp.clang_format_path"                   : null
, "C_Cpp.clang_format_style"                  : "file"
, "C_Cpp.clang_format_fallbackStyle"          :
  {
    "BasedOnStyle"                            : "Chromium"
  , "IndentWidth"                             : 2
  , "IndentCaseLabels"                        : false
  , "AlignAfterOpenBracket"                   : "BAS_Align"
  , "AlignConsecutiveAssignments"             : true
  , "AlignConsecutiveDeclarations"            : true
  , "BreakConstructorInitializersBeforeComma" : true
  }
, "C_Cpp.clang_format_sortIncludes"   : null
, "html.format.wrapLineLength"        : 0

/* Plant UML */
, "plantuml.commandArgs"              :
  [
    "-Xmx2g"
  , "-DPLANTUML_LIMIT_SIZE=16384"
  ]

/* code-runner settings */
, "code-runner.clearPreviousOutput"   : true
, "code-runner.runInTerminal"         : true
, "C_Cpp.updateChannel"               : "Insiders"
, "plantuml.exportFormat"             : "png"
, "terminal.integrated.shell.windows" : "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
, "git.autofetch"                         : true
, "gitlens.gitCommands.skipConfirmations" :
  [
    "fetch:command"
  , "stash-push:command"
  , "switch:command"
  , "push:command"
  ]
, "plantuml.render"                               : "Local"
, "plantuml.server"                               : "http://localhost:8080"
, "editor.suggestSelection"                       : "first"
, "vsintellicode.modify.editor.suggestSelection"  : "automaticallyOverrodeDefaultValue"
, "team.showWelcomeMessage"                       : false
, "[json]"                                        :
  {
    "editor.defaultFormatter"             : "vscode.json-language-features"
  }

/* Draw.io */
, "hediet.vscode-drawio.online-url"       : "about:blank;https://embed.diagrams.net/"
, "hediet.vscode-drawio.local-storage"    : ""

/* Code Runner */
// , "code-runner.executorMap"           :
//   {
//     "c"   : "clang -std=c11 -g -Og -pipe -Wall ${fileName} -o ${fileNameWithoutExt}.exe && ${fileNameWithoutExt}.exe"
//   , "cpp" : "clang++ -std=c++1z -g -Og -pipe -Wall ${fileName} -o ${fileNameWithoutExt}.exe && ${fileNameWithoutExt}.exe"
//   }
}
